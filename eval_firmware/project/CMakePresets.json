{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
       {
            "name": "Release",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
       {
            "name": "Release",
            "configurePreset": "Release"
        },
        {
            "name": "Debug",
            "configurePreset": "Debug"
        }
    ]
}